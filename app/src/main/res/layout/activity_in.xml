<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.stockone.lite.view.pages.In">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_in"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/dwnld_in_excel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_download_files"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolbar_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:id="@+id/style_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/style_pass_txt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <EditText
                android:id="@+id/in_sku_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SKU ID"
                android:layout_toLeftOf="@+id/barcode_in"
                android:paddingLeft="20dp"
                android:inputType="text"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:theme="@style/MyEditTextStyle1"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/barcode_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_barcode"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/in_sku_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLength="15"
            android:paddingLeft="20dp"
            android:inputType="number"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:theme="@style/MyEditTextStyle1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/in_sku_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Default Storage Location"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Default Storage Location"
            android:paddingLeft="20dp"
            android:focusableInTouchMode="false"
            android:drawableRight="@drawable/ic_down_arrow"
            android:paddingRight="10dp"
            android:inputType="text"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="@color/black"
            android:layout_gravity="center"
            android:theme="@style/MyEditTextStyle1"/>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_in_sku_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#a8e063">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
