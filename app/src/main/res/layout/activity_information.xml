<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stockone.lite.view.pages.Information">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_information"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_centerVertical="true"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/toolbar_information">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>

                <EditText
                    android:id="@+id/info_sku_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SKU"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="20dp"
                    android:focusableInTouchMode="false"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:paddingRight="10dp"
                    android:inputType="text"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:theme="@style/MyEditTextStyle1"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_get_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="5dp"
                    app:contentPadding="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#a8e063">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Information"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_quant_ll"
                android:layout_below="@+id/info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Quantity :"
                android:textColor="@color/black"
                android:textStyle="bold"/>

                <TextView
                    android:id="@+id/info_total_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 30"
                    android:textColor="@color/red"/>

            </LinearLayout>

            <TextView
                android:id="@+id/location_text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/total_quant_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locations :"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/location_text"
                android:id="@+id/rv_info"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transaction_text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions :"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/transaction_text"
                android:id="@+id/rv_info_transaction"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
