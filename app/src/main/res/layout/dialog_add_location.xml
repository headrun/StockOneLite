<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fefefe"
        android:visibility="visible"
        android:id="@+id/force_update"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_add_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Location"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/green"
                android:textSize="20sp"/>

            <EditText
                android:layout_below="@+id/text_add_location"
                android:id="@+id/et_add_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="20dp"
                android:inputType="text"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:theme="@style/MyEditTextStyle1"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card_add_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                card_view:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp"
                app:cardPreventCornerOverlap="false"
                android:layout_below="@+id/et_add_location">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:letterSpacing="0.14"
                    android:text="Add" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>