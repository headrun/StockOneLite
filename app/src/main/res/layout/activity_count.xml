<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.stockone.lite.view.pages.Count">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_count"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_centerVertical="true"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/count_ll"
        android:layout_below="@+id/toolbar_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/count_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose Location"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:focusableInTouchMode="false"
            android:drawableRight="@drawable/ic_down_arrow"
            android:paddingRight="10dp"
            android:inputType="text"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:theme="@style/MyEditTextStyle1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/count_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose Product"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:focusableInTouchMode="false"
            android:drawableRight="@drawable/ic_down_arrow"
            android:paddingRight="10dp"
            android:inputType="text"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:theme="@style/MyEditTextStyle1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actual amount"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <EditText
            android:id="@+id/count_sku_quant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:inputType="number"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:theme="@style/MyEditTextStyle1"/>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_change_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="5dp"
            app:contentPadding="10dp"
            android:layout_marginBottom="40dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#a8e063">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Amount"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
