<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.stockone.lite.view.pages.Home"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:weightSum="3">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/card_view_in"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_weight="0.6"
                            android:layout_marginTop="10dp"
                            android:id="@+id/image_contact_us"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_in"/>

                        <TextView
                            android:layout_weight="0.4"
                            android:id="@+id/text_home_contact_us"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="Stock In"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/card_view_out"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_weight="0.6"
                            android:layout_marginTop="10dp"
                            android:id="@+id/image_my_ordr"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_out"/>

                        <TextView
                            android:layout_weight="0.4"
                            android:id="@+id/text_my_ordr"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:text="Stock Out"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/card_view_move"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_weight="0.6"
                            android:layout_marginTop="10dp"
                            android:id="@+id/image_sales"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_move"/>

                        <TextView
                            android:layout_weight="0.4"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Move Stock"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/card_view_inventory"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_weight="0.6"
                            android:layout_marginTop="10dp"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_inventory"/>

                        <TextView
                            android:layout_weight="0.4"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:text="Inventory"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/card_view_info"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_weight="0.6"
                            android:layout_marginTop="10dp"
                            android:id="@+id/image_settings"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_information"/>

                        <TextView
                            android:layout_weight="0.4"
                            android:id="@+id/text_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:text="Information"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/card_view_location"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_weight="0.6"
                            android:layout_marginTop="10dp"
                            android:id="@+id/image_avl_order"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_location"/>

                        <TextView
                            android:layout_weight="0.4"
                            android:id="@+id/text_avl_order"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Locations"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
