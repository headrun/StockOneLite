<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.stockone.lite.view.pages.Out">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_out"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/dwnld_out_excel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_download_files"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/out_ll"
        android:layout_below="@+id/toolbar_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <RelativeLayout
            android:id="@+id/style_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/style_pass_txt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <EditText
                android:id="@+id/out_sku_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SKU ID"
                android:layout_toLeftOf="@+id/barcode_out"
                android:paddingLeft="20dp"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/ic_down_arrow"
                android:paddingRight="10dp"
                android:inputType="text"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:theme="@style/MyEditTextStyle1"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/barcode_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_barcode"/>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/out_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_locations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locations -"
                android:visibility="invisible"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/text_locations"
                android:id="@+id/rv_out"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView

                android:layout_below="@+id/rv_out"
                android:id="@+id/btn_out_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="5dp"
                android:visibility="invisible"
                app:contentPadding="10dp"
                android:layout_alignParentRight="true"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#a8e063">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
