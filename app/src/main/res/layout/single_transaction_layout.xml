<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_transaction"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_out"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_toRightOf="@+id/img_transaction"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/transcation_pro_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pen"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"/>

                <TextView
                    android:id="@+id/transcation_pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pen"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/transcation_pro_quant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 pieces"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/transcation_pro_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default Storage Location"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/transcation_pro_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/29/18 2:25 PM"
                    android:textSize="16sp"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>